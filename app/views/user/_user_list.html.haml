- users.each do |user|
  .row
    .col-md-6.col-md-offset-3
      .col-md-4
        %div{align: "center"}
          = image_tag image_url(avatar(user, :thumb), class: 'imgwrapper img-responsive'), size: "60x60"
      .col-md-8
        %h1{align: "center"}= link_to user.full_name, user_path(user)
  %hr
%ul.pager
  = will_paginate users, renderer: BootstrapPagination::Rails